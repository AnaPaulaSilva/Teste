{
  "openapi": "3.0.0",
  "info": {
    "title": "Teste banco Original",
    "description": "Cadastro e consulta de cliente",
    "contact": {
      "email": "ana.2892.silva@gmail.com"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "/"
    }
  ],
  "tags": [
    {
      "name": "clientes",
      "description": "Criação de cadastro de um novo cliente"
    },
    {
      "name": "busca",
      "description": "Busca de cadastro por email"
    }
  ],
  "paths": {
    "/clients": {
      "get": {
        "tags": [
          "buscar"
        ],
        "summary": "busca de clientes cadastrados",
        "description": "Buscar um cliente cadastrado utilizando o email\n",
        "operationId": "buscaCliente",
        "parameters": [
          {
            "name": "searchString",
            "in": "query",
            "description": "pass an optional search string for looking up inventory",
            "required": false,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "skip",
            "in": "query",
            "description": "number of records to skip for pagination",
            "required": false,
            "style": "form",
            "explode": true,
            "schema": {
              "minimum": 0,
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "maximum number of records to return",
            "required": false,
            "style": "form",
            "explode": true,
            "schema": {
              "maximum": 50,
              "minimum": 0,
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "search results matching criteria",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ClientItem"
                  }
                }
              }
            }
          },
          "400": {
            "description": "bad input parameter"
          }
        }
      },
      "post": {
        "tags": [
          "cadastrar"
        ],
        "summary": "cadastro de novos clientes",
        "description": "Adds an item to the system",
        "operationId": "addCliente",
        "requestBody": {
          "description": "Adicionar novo cliente",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ClientItem"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "item created"
          },
          "400": {
            "description": "invalid input, object invalid"
          },
          "409": {
            "description": "an existing item already exists"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ClientItem": {
        "required": [
          "cpf",
          "email",
          "endereco",
          "name"
        ],
        "type": "object",
        "properties": {
          "cpf": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string",
            "example": "Ana Paula Silva"
          },
          "email": {
            "type": "string",
            "format": "email@email.com",
            "example": "ana@gmail.com"
          },
          "cep": {
            "type": "string",
            "format": "00000-000",
            "example": "37000-000"
          },
          "rua": {
            "type": "string",
            "format": "rua 21 de novembro",
            "example": "rua 21 de novembro"
          }
        }
      }
    }
  }
}